<!DOCTYPE html>
<html>
<head>
  <title>My Applications</title>
</head>
<body>
  <h1>My Applications</h1>

  <% if (userId) { %>
    <a href="/users/<%= userId %>/applications/new">
      <button>+ New Application</button>
    </a>
  <% } else { %>
    <p style="color: red;">User ID not available â€” cannot create new application.</p>
  <% } %>

  <% if (applications.length > 0) { %>
    <ul>
      <% applications.forEach(app => { %>
        <li>
          <strong><%= app.title %></strong> - 
          <span class="status"><%= app.status || 'Pending' %></span>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p class="no-applications">No applications found.</p>
  <% } %>

</body>
</html>

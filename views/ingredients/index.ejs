<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ingredient Management</title>
</head>
<body>
    <%- include('../partials/_navbar') %>
    
    <h1>Ingredient Manager</h1>
    
    <div>
        <a href="/">Home</a> | 
        <a href="/recipes">Recipes</a> | 
        <a href="/ingredients">Ingredients</a>
    </div>
    
    <h2>Add New Ingredient</h2>
    <form action="/ingredients" method="POST">
        <label for="name">Ingredient Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter ingredient name" required>
        <button type="submit">Add Ingredient</button>
    </form>
    
    <h2>Current Ingredients</h2>
    <% if (ingredients && ingredients.length > 0) { %>
        <ul>
            <% ingredients.forEach(ingredient => { %>
                <li>
                    <%= ingredient.name %>
                    
                    <!-- Edit button form -->
                    <form action="/ingredients/<%= ingredient._id %>/edit" method="GET" style="display: inline;">
                        <button type="submit">Edit</button>
                    </form>
                    
                    <!-- Delete button form -->
                    <form action="/ingredients/<%= ingredient._id %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No ingredients found. Add your first ingredient above!</p>
    <% } %>
</body>
</html>